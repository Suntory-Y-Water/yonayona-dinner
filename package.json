{
  "name": "yonayona-dinner",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=yonayona-dinner-client",
    "dev:server": "turbo dev --filter=yonayona-dinner-server",
    "build": "turbo build",
    "build:client": "turbo build --filter=yonayona-dinner-client",
    "build:server": "turbo build --filter=yonayona-dinner-server",
    "deploy": "bun run deploy:server && bun run deploy:client",
    "deploy:client": "turbo deploy --filter=yonayona-dinner-client",
    "deploy:server": "turbo deploy --filter=yonayona-dinner-server",
    "lint": "biome lint .",
    "typecheck": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=yonayona-dinner-shared --filter=yonayona-dinner-server",
    "format": "biome format . --write",
    "ai-check": "bun run format && bun run lint && bun run type-check"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "^1.3.0",
    "@types/web": "^0.0.281",
    "bun-types": "latest",
    "turbo": "^2.5.5",
    "wrangler": "^4.43.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
