{
  "$schema": "https://raw.githubusercontent.com/d-kimuson/modular-mcp/refs/heads/main/config-schema.json",
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "description": "公式ドキュメントから仕様を検索するときに使用します。",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {}
    },
    "serena": {
      "type": "stdio",
      "description": "TypeScriptのファイルを編集するときに使用します。`メモリ`や`serena`という単語を指示された場合に使用します。",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        ".",
        "--enable-web-dashboard=false"
      ]
    },
    "kiri": {
      "type": "stdio",
      "description": "TypeScriptのファイルを読み込みするときに使用します。`kiri`という単語を指示された場合に使用します。",
      "command": "npx",
      "args": [
        "kiri-mcp-server@latest",
        "--repo",
        ".",
        "--db",
        ".kiri/index.duckdb",
        "--watch"
      ]
    }
  }
}
