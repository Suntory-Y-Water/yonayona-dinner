{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__serena",
      "mcp__context7",
      "mcp__deepwiki",
      "SlashCommand(/kiro:spec-requirements yonayona-dinner)",
      "Bash(hono docs cache)",
      "Bash(hono search cache)",
      "Bash(hono docs /docs/middleware/builtin/cache)",
      "Bash(bun run build)",
      "Bash(bun test)",
      "mcp__ide__getDiagnostics",
      "Bash(bun run test:*)",
      "mcp__modular-mcp",
      "Bash(hono search:*)",
      "Bash(hono docs:*)"
    ],
    "deny": [
      "Bash(rm -rf ../*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(.credentials.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "WebFetch",
      "WebSearch"
    ],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["modular-mcp"],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/use_typecheck.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --silent -i ~/.claude/scripts/typescript/no_restricted_edit.ts"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  },
  "enabledPlugins": {
    "hono-skills@kfly8-claude-plugins": true
  },
  "extraKnownMarketplaces": {
    "kfly8-claude-plugins": {
      "source": {
        "source": "github",
        "repo": "kfly8/claude-plugins"
      }
    }
  }
}
